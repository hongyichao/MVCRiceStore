
@using System.Security.Cryptography.X509Certificates
@using MVCRiceStore.Models
@using PagedList
@using PagedList.Mvc
@model OrderListViewModel

@{
    IPagedList<OrderViewModel> pagedList = Model.OrderList;
    string storeName = Model.StoreName;
}

<div id="orderList">

    <table class="table">
        <tr>
            <th>@Html.DisplayName("Order Id")</th>
            <th>@Html.DisplayName("Client Id")</th>
            <th>@Html.DisplayName("Client Name")</th>
            <th>@Html.DisplayName("Store Name")</th>
            <th>@Html.DisplayName("Rice Type")</th>
            <th>@Html.DisplayName("Kilogram")</th>
        </tr>
        @foreach (var order in pagedList)
        {
            <tr>
                <td>@Html.DisplayFor(o => order.ClientOrderId)</td>
                <td>@Html.DisplayFor(o => order.ClientId)</td>
                <td>@Html.DisplayFor(o => order.ClientName)</td>
                <td>@Html.DisplayFor(o => order.StoreName)</td>
                <td>@Html.DisplayFor(o => order.RiceType)</td>
                <td>@Html.DisplayFor(o => order.Kilogram)</td>
            </tr>
        }
    </table>
    
    @Html.PagedListPager(pagedList, page => Url.Action("Index", new { page, storeNameF = Model.StoreName, clientNameF = Model.ClientName }))
</div>


