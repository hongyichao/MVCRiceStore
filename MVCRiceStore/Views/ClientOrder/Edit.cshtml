@model MVCRiceStore.Models.ClientOrder

@{
    ViewBag.Title = "Edit Client Order";

    List<SelectListItem> storeList = ViewBag.StoreList;
    List<SelectListItem> riceList = ViewBag.RiceList;
}

<h2>@ViewBag.Title</h2>
<br/><br/>
<div class="row">
    @using (Html.BeginForm())
    {
        <input type="hidden" id="ViewName" value="ClientOrderEditView"/>
        @Html.HiddenFor(model => model.Id)
        <div class="form-horizontal">
            <div class="form-group">
                <div class="col-md-1"></div>
                <div class="col-md-1">@Html.Label("Store")</div>
                @*<div class="col-md-5">@Html.DropDownListFor(model => model.StoreId, storeList)</div>*@
                <div class="col-md-10">
                    <select id="StoreId" name="StoreId">
                        <option value=""></option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-1"></div>
                <div class="col-md-1">@Html.Label("Rice")</div>
                @*<div class="col-md-5">@Html.DropDownListFor(model => model.RiceId, riceList)</div>*@
                <div class="col-md-10">
                    <select id="RiceId" name="RiceId">
                        <option value=""></option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-1"></div>
                <div class="col-md-1">@Html.Label("Kilogram")</div>
                <div class="col-md-10">@Html.EditorFor(model => model.Kilogram)</div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-1 col-md-11">
                    <input type="submit" value="Save" />
                </div>
            </div>
        </div>
    }
</div>


<div class="row">
    @Html.ActionLink("back to client view", "Edit", "Client", new {id=Model.Client.Id}, null)
</div>