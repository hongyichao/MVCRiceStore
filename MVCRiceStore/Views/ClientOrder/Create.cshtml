@model MVCRiceStore.Models.ClientOrderViewModel

@{
    ViewBag.Title = "Add New Order";
    List<SelectListItem> storeList = ViewBag.StoreList;
    List<SelectListItem> riceList = ViewBag.RiceList;
}

<h2>@ViewBag.Title</h2>
<h3>Client Id: @Model.ClientId</h3>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group">
            <div class="control-label col-md-2">@Html.Label("Stores")</div>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.StoreId, storeList, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">@Html.Label("Rices")</div>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.RiceId, riceList, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">@Html.Label("Kilograms")</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Kilogram, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />    
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Edit", "Client", new {id=Model.ClientId}, null)
</div>