@model MVCRiceStore.Models.Client

@{
    ViewBag.Title = "Add New Client";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <hr />
        <div class="form-group">

            <div class="control-label col-md-2">@Html.Label("Name")</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.Name, string.Empty, new {@style = "color:red;"})
            </div>
        </div>
        <div class="form-group">
            <div class="control-label col-md-2">@Html.Label("Note")</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Note, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.Note, string.Empty, new {@style = "color:red;"})
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default"/>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>