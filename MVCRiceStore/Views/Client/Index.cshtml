@model IEnumerable<MVCRiceStore.Models.Client>

@{
    ViewBag.Title = "Client List";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New","Create")
</p>

<table class="table">
    <tr>
        <th>@Html.DisplayName("Client Name")</th>
        <th>@Html.DisplayName("Note")</th>
        <th></th>
    </tr>
    
@foreach (var client in Model)
{
    <tr>
        <td>@Html.DisplayFor(modelClient => client.Name)</td>
        <td>@Html.DisplayFor(modelClient => client.Note) </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {id = client.Id}) | 
            @Html.ActionLink("Delete", "Delete", new {id = client.Id})
        </td>
    </tr> 
} 

</table>