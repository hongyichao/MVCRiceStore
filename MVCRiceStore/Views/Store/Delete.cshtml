@model MVCRiceStore.Models.Store

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-3">@Html.Label("Name")</div>
            <div class="col-md-9">@Html.DisplayFor(model=>model.Name)</div>
        </div>

        <div class="form-group">
            <div class="col-md-3">@Html.Label("Address")</div>
            <div class="col-md-9">@Html.DisplayFor(model=>model.Address)</div>
        </div>

        <div class="form-group">
            <div class="col-md-3">@Html.Label("Suburb")</div>
            <div class="col-md-9">@Html.DisplayFor(model=>model.Suburb)</div>
        </div>

        <div class="form-group">
            <div class="col-md-3">@Html.Label("State")</div>
            <div class="col-md-9">@Html.DisplayFor(model=>model.State)</div>
        </div>

        <div class="form-group">
            <div class="col-md-3">@Html.Label("Postcode")</div>
            <div class="col-md-9">@Html.DisplayFor(model=>model.Postcode)</div>
        </div>

        <div class="form-group">
            <input type="submit" value="Delete"/>
        </div>

    </div>
}
