@using MVCRiceStore.Models
@model MVCRiceStore.Models.StoreViewModel

@{
    ViewBag.Title = "Add New Store";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <div class="control-label col-md-2">@Html.Label("Name")</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.Name, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">@Html.Label("Address")</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Address, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.Address, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">@Html.Label("Suburb")</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Suburb, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.Suburb, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">@Html.Label("Postcode")</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Postcode, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.Postcode, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">@Html.Label("Available Rice")</div>
            @{
                var listItems = new List<object>();
                var riceList = ViewBag.RiceList;

                if (riceList != null)
                {
                    foreach (Rice r in riceList)
                    {
                        listItems.Add(new {Value = r.Id.ToString(), Text = r.Description});
                    }
                }

            }
            <div class="col-md-5">@Html.ListBoxFor(model => model.rices, new SelectList(listItems, "Value", "Text"),
                                      new {htmlAttributes = new {@class = "form-control"}})</div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default"/>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

